}
/********************************* Content Section **********************************************/
/*
  General content styling.
*/
.content-styling H1 {
	font-family: "Varela Round";
	font-size: 1.8em;
	line-height: 1em;
	margin: 0px 0px 0px 100px;
	padding-top: 5px;
	color: #0B6E1A;
}
.content-styling H2 {
	font-family: "Varela Round";
	color: #006633;
}
.content-styling H3 {
	font-family: "Varela Round";
	font-style: italic;
}
.content-styling HR {
	color: #014cb1;
	height: 3px;
}
/*
  Info block styling.
*/
.info-block {
	background-color: #fff;
	border: solid 3px #014cb1;
	-moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;
	margin: 0px 0 5px 0;
	padding: 5px 30px 5px 30px;
}
.info-block .headline-text {
	font-family: "Varela Round";
	font-size: 20px;
	color: #0b6e1a;
}
.info-block .secondline-text {
	font-family: "Varela Round";
	font-size: 18px;
	font-style: italic;
	color: #000;
}
/*
  Provide a class to move past the hand for the first block on a page.
*/
.first-block {
	padding-top: 25px !IMPORTANT;
}
/*
  State selector box styling
*/
.state-selector {
	background-image: url("../images/green_gradient_bg_300h.png");
	background-repeat: repeat-x;
	-moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;
	padding: 5px 0px 5px 0px;
	margin-bottom: 5px;
}
.state-selector .headline-text {
	font-family: "Varela Round";
	font-size: 20px;
	line-height: 24px;
	color: #fff;
	text-align: center;
	padding: 0px 30px 0px 30px;
}
.state-selector .secondline-text {
	font-family: "Varela Round";
	font-size: 16px;
	line-height: 18px;
	color: #000;
	text-align: center;
	padding: 0px 30px 0px 30px;
}
.state-selector .container-inline {
	/*margin-left:30px;*/
	margin-left: auto;
	margin-right: auto;
	width:150px;
	margin-bottom: 10px;
}
.state-selector .ctools-jump-menu-button {
	margin-left: 10px;
}
