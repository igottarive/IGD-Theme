	background-image: url("../images/green_gradient_footer.png");
}
.site-footer2 .footer-info {
	text-align: center;
	font-size: 12px;
	color:#fff;
	padding-bottom: 10px;
}
/*
  Footer nice menu setup
*/
.nice-footer-setup ul li {
	list-style: none;
	font-size: 1em;
	border: none;
	border-right: 1px solid #fff;
	background-color: transparent;
}
.nice-footer-setup ul li.last {
	border: none !important;
}
.nice-footer-setup ul li a:link, .nice-footer-setup a:hover,.nice-footer-setup a:visited,.nice-footer-setup a:active {
	text-decoration: none;
}
.nice-footer-setup ul li a:link, .nice-footer-setup ul li a:visited {
	color: #fff;
}
.nice-footer-setup ul li a:hover {
	color: #df601d;
}
.nice-footer-setup ul li .active, .nice-footer-setup ul li a:active {
	color: #95b4e7!important;
	background-color: transparent;
}
/******************************* slideshow **********************************************/
/*
  General flexslider setup.
*/
.igd-slider .flexslider {
	margin: 0px 0px 5px 0px;
}
.igd-slider .flex-nav-container {
	margin-bottom: 0px;
}
/*
  Setup controls - both side and bottom.
*/
.igd-slider .flex-direction-nav .flex-prev {
	opacity: 1;
	left: 0px;
}
.igd-slider .flex-direction-nav .flex-next {
	opacity: 1;
	right: 0px;
}
.igd-slider .flex-direction-nav a {
	height: 60px;
	width: 40px;
	background: url("../images/igd_bg_direction_nav.png");
	background-repeat: no-repeat;
	margin: -35px 0 0;
}
.igd-slider .flexslider {
	border: solid 30px #1374a1;
	background-color: #fff;
	-moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;
}
.igd-slider .flex-control-nav {
	bottom: 2px;
}
.igd-slider .flex-control-paging li a.flex-active {
	height: 16px;
	width: 18px;
	background-image: url("../images/slider_dot_active.png");
}
.igd-slider .flex-control-paging li a {
	height: 15px;
	width: 16px;
	background-image: url("../images/slider_dot_inactive.png");
}
.igd-slider .views_slideshow_controls_text {
	visibility: hidden;
}
/*
  Setup the box within the slider
*/
.igd-slider .flexslider {
	padding-bottom: 10px;
}
.igd-slider h2 {
	margin-bottom: 0px;
	font-size: 2em;
	margin: 0px;
}
.igd-slider li {
	margin: 0px;
	padding: 0px 10px 0px 10px;
}
.igd-slider-text {
	width: 49%;
	float:right;
	font-size: 1.25em;
}
/*
  Note that that the text is encapsulated in a <p> if there are more than 1 slide...
*/
.igd-slider p {
	margin: 0px 10px 0px 0px;
}
.igd-slider-image {
	width: 49%;
	height: auto;
	padding-bottom: 10px;
}
/*
  Styling for specific pages. 
*/
/* 
  Styling for generic pages where the "main page content" block was used with context. This is needed as there is no way
  to assign a class to the block within context. Note it is assumed that the "main page content" block will be the first
  block on a page.
*/
.igd-main-block .info-block {
	padding-top: 20px;
}
/*
  A bit of fixup for the 404 error page...
*/
.igd-page-not-found .block-system-main {
	display: none;
}
