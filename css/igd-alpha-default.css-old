/*
  General styling.
*/
body {
	font-family: "Varela Round";
	font-size: 1em;
}	
.igd-header-color {
	background-color: #72a435;
}
.igd-body-color {
	background-color: #ccc;
}

ol li, ul li {
	margin-top: 1.5em;
	margin-left: 10px;
}
.igd-invisible {
	display: none;
}
/*
  Fix bug with the "previous" pager button.
*/
li.pager-previous a {
	width: 65px !IMPORTANT;
}
/*
  Turn off RSS feed for taxonomy pages.
*/
.page-taxonomy .feed-icon {
	display: none;
}
/*
  Styling for an embedded video container/
*/
.embed-container {
    position: relative;
    padding-bottom: 56.25%; /* 16/9 ratio */
    padding-top: 30px; /* IE6 workaround*/
    height: 0;
    overflow: hidden;
}
.embed-container iframe, .embed-container object, .embed-container embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
/*
  Styling for stand-alone blog entries.
*/
.node-driving-tip p {
	padding-top: 30px;
}
.node-blog .igd-blog-title, .igd-tip-all .views-field-title {
	color: #0B6E1A;
	font-size: 1.2em;
	font-style: bold;
	margin-bottom: 1em;
}
.node-blog .blog-title {
	color: #1f4a9f;
	font-size: 1.2em;
	font-style: bold;
	margin-bottom: 5px;
}
.node-blog {
	padding-top: 20px;
}
.node-blog h2 {
	margin-bottom: 0px;
}
.node-blog footer {
	float: left;
}
.node-blog .field-type-taxonomy-term-reference .field-item {
	padding-right: 4px;
}
/*
  Styling for blog & driving tips all teaser pages (i.e., /blog, /driving-tips).
*/
.igd-blog-all, .igd-tip-all {
	padding-top: 30px !important;
}
.igd-blog-all .node-blog, .igd-tip-all .views-row {
	border: none;
	border-bottom: solid 1px #000;
	-moz-border-radius: 0px; -webkit-border-radius: 0px; border-radius: 0px;
}
.igd-blog-all .node-blog footer {
	float: left;
}
.igd-blog-all .node-blog p {
	clear: both;
}
.igd-tip-all img {
	float:left;
	margin-right: 10px;
	margin-top: 5px;
}
.igd-tip-all .views-field-title {
	margin-top: 10px;
}
.igd-tip-all .tips-title {
	font-size: 1.3em;
	line-heiht: 1.3em;
}
.igd-tip-all .igd-video-no {
	padding-left: 0px;
}
/*
  Styling for date/author fields for all blog usage.
*/
.igd-date-author, .igd-blog-categories footer {
	font-size: 1em;
	color: #999999;
	font-style: italics;
}
/*
  Styling for H2 in all blog usage.
*/
.igd-blog-search-results h2, .igd-blog-all h2 {
	margin-bottom: -4px;
}
/*
  Styling for blog paragraph
*/
.igd-blog-search-results p, .igd-blog-all p {
	margin-top: 15px;
}
.igd-blog-search-results .views-row, .igd-blog-all .views-row {
	border-bottom: 1px solid #999999;
	margin-bottom: 2px;
}
.igd-blog-search-results .views-row-last, .igd-blog-all .views-row-last {
	border: none;
	margin-bottom: 0px;
}
/*
  Styling for the category select box on the blog search form.
*/
.igd-blog-search .form-select {
	background-color: #ccc;
}
/*
  Styling for categories label.
*/
.igd-categories, .node-blog .field-name-field-terms .field-label {
	background: url(../images/category_icon.png) no-repeat 0 0;
	font-size: 0;
	color: transparent;
	padding: 16px 10px;
}
/*
  Styling for the blog search form block.
*/
.igd-blog-search label, .igd-blog-search .form-text, .igd-blog-search .form-type-select{
	margin-left: 5px;
}
.igd-blog-search label {
	color: #fff;
	font-size: 1.3em;
	font-weight: normal;
	margin-bottom: 3px;
}
.igd-blog-search .form-text {
	background-color: #ccc;
	border: none;
	box-shadow: inset 2px 2px 2px 0 #000;
	-webkit-box-shadow: inset 2px 2px 2px 0 #000;
	-moz-box-shadow: inset 2px 2px 2px 0 #000;
}
.igd-blog-search .form-submit {
	height: 27px; /* height of image */
	width: 33px; /* width of image */
	background: url(../images/search_magnifyer.png) no-repeat 0 0;
	border-style: none;
	font-size: 0;
	color: transparent;
	background-color: #014cb1;
	margin-top: 26px !important;
}
.igd-blog-search .views-widget-filter-search_api_views_fulltext {
	padding-right: .25em;
}
.igd-blog-search .views-widget-filter-field_terms {
	padding-right: .5em;
}
/*
  Styling for the blog search results page.
*/
.igd-blog-search-results,  {
	padding-top: 20px;
}
/*
  Styling for the article categories page(s).
*/
.igd-blog-categories .info-block {
	padding-top: 20px;
}
.igd-blog-categories .blog-title {
	font-size: 0px;
	color: transparent;
}
.igd-blog-categories p {
	clear: both;
}
/*
  Styling for a blog summary block.
*/
.summary-block-blog .view-content {
	padding: 10px;
}
.summary-block-blog .views-field {
	margin-bottom: 0px;
}
.summary-block-blog span {
	font-size: 1.3em;
}
/*
  Styling for a summary block, customer review block.
*/
.summary-block, .igd-customer-reviews {
	margin: 0px 0 5px 0;
	background-color: #fff;
	border: 2px solid #40882e;
	-moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;
}
.summary-block h2, .igd-customer-reviews h2 {
	color: #fff !IMPORTANT;
	font-size: 1.6em;
	text-align: center;
	padding-top: 10px;
	padding-bottom: 10px;
	margin: -1px -1px 0px -1px;
	background-image: url("../images/green_gradient_footer.png");
	background-repeat: repeat-x;
	-moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;
}
/*
  Styling for a program summary block.
*/
.summary-block-program .item-list ul {
/*	padding-top: 5px;
	padding-right: 5px;*/
}
.summary-block-program .item-list li {
	font-size: 1.1em;
	margin: 10px 5px;
	margin-top: 10px;
}
.summary-block-program .item-list span {
	color: #0B6E1A;
	font-weight: bold;
}
/*
  Styling for Customer Review" block.
*/
.igd-customer-reviews p {
	font-size: 1.2em;
	color: #0B6E1A;
	padding: 5px 5px 0px 5px;
	margin-bottom: 5px;
	text-align: center;
}
 .igd-customer-reviews ul {
	padding: 0px 5px 0px 5px;
	list-style: none;
	text-align: center;
	font-size: 1.2em;
}
 .igd-customer-reviews ul li {
	margin-top: 5px;
}
/*
  Styling for the resources block on the student page.
*/
.resources-block p {
	margin: 0px 10px 5px 10px;
	padding-top: 5px;
}
.resources-block .resources-paragraph {
	border-top: solid 2px #ccc;
}
/*
  Styling for the student-info1 block on the student page.
*/
.student-info1 {
	width: 70%;
	margin: 0 auto;
	margin-bottom: 20px;
	text-align: center;
	color: #fff;
	background-image: url("../images/blue_gradient_footer.png");
	-moz-border-radius: 10px; -webkit-border-radius: 10px; border-radius: 10px;
}
.student-info1 span {
	font-size: 1.2em;
}
/*
  Now for the state information block on the student page. jjp
*/
.state-info-list {
	padding: 10px 30px !important;
}
.state-info-list h2 {
	font-size: 1.75em;
}
.state-info-list h3 {
