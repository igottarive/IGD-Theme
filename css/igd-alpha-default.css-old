/*
  Menu zone setup. Note height of menu zone must match the height of the largest element (ie, the hand…).
*/
.menu-setup {
	height: 66px; /* height of hand... */
	margin-top: -23px;
	background-image: url("../images/nav_bar_end.png"), url("../images/nav_bar_slice.png");
	background-repeat: no-repeat, repeat-x;
	background-position: right, center;
}
.menu-hand {
	position: absolute;
	top: 0px;
	left: 0px;
	height: 66px; /* height of hand... */
	z-index:10;
}
/*
  Header nice menu setup.
*/
.nice-header-setup {
	position: absolute;
	top: 32px;
	left: 100px;
}
.nice-header-setup ul li {
	list-style: none;
	font-size: 1em;
	border: none;
}
.nice-header-setup ul.nice-menu li {
	margin-right: 30px;
}
/*.nice-header-setup ul.nice-menu li.last {
	position: relative;
	right: 0px;
	float:right;
}*/
.nice-header-setup ul li a:link, .nice-header-setup ul li a:hover, .nice-header-setup ul li a:visited, .nice-header-setup ul li a:active {
	text-decoration: none!important;
	background-color: #0B6E1A;
}
.nice-header-setup ul li a:link, .nice-header-setup ul li a:visited {
	color: #fff;
}
.nice-header-setup ul li a:hover {
	color: #df601d;
}
.nice-header-setup ul li .active, .nice-header-setup ul li a:active {
	color: #95b4e7!important;
}
.nice-header-setup ul.nice-menu ul li, .nice-setup ul.nice-menu ul li li{
	border-bottom: 1px solid #000;
}
.nice-header-setup ul.nice-menu, .nice-header-setup ul.nice-menu ul, .nice-header-setup ul.nice-menu li {
	border: none;
}
